{
  "name": "@mdp-framework/mcp-server",
  "version": "1.1.16",
  "description": "MCP Server - Expose MDP capabilities as tools for Claude Code, Cursor, and other MCP clients",
  "type": "module",
  "author": "MDP Framework Contributors",
  "homepage": "https://github.com/mdp-labs/mdp-mlang#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/mdp-labs/mdp-mlang.git",
    "directory": "packages/mcp-server"
  },
  "bugs": {
    "url": "https://github.com/mdp-labs/mdp-mlang/issues"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "mcp-server": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist *.tsbuildinfo",
    "prepublishOnly": "npm run build && npm test"
  },
  "dependencies": {
    "@mdp-framework/schemas": "^1.1.0",
    "@mdp-framework/gateway": "^1.1.0"
  },
  "peerDependencies": {
    "@mdp-framework/schemas": "^1.1.0",
    "@mdp-framework/gateway": "^1.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "typescript": "^5.6.0",
    "vitest": "^1.6.0"
  },
  "keywords": [
    "mdp",
    "mcp",
    "model-context-protocol",
    "claude-code",
    "cursor",
    "ai-tools"
  ],
  "license": "MIT"
}
