{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://mdp.dev/schemas/aoi-spec/v1",
    "title": "AOISpec",
    "description": "Abstract Of Interface specification for missing or near-miss assets",
    "type": "object",
    "required": ["id", "kind", "name", "status", "created_at"],
    "properties": {
        "id": {
            "type": "string",
            "description": "Unique AOI identifier",
            "pattern": "^aoi://[a-z0-9_/-]+$"
        },
        "kind": {
            "type": "string",
            "description": "Type of missing asset",
            "enum": ["component", "policy", "adapter", "schema", "config", "custom"]
        },
        "name": {
            "type": "string",
            "description": "Name of missing asset"
        },
        "description": {
            "type": "string",
            "description": "Detailed description of what is needed"
        },
        "status": {
            "type": "string",
            "enum": ["detected", "specified", "assigned", "stubbed", "resolved", "migrated"],
            "description": "Current status in AOI lifecycle"
        },
        "created_at": {
            "type": "string",
            "format": "date-time"
        },
        "updated_at": {
            "type": "string",
            "format": "date-time"
        },
        "detected_in": {
            "type": "object",
            "description": "Context where missing asset was detected",
            "properties": {
                "repo": { "type": "string" },
                "pr_number": { "type": "integer" },
                "file": { "type": "string" },
                "line": { "type": "integer" }
            }
        },
        "specification": {
            "type": "object",
            "description": "Abstract interface specification",
            "properties": {
                "interface": {
                    "type": "object",
                    "description": "Expected interface contract",
                    "additionalProperties": true
                },
                "requirements": {
                    "type": "array",
                    "items": { "type": "string" }
                },
                "examples": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "description": { "type": "string" },
                            "code": { "type": "string" }
                        }
                    }
                }
            }
        },
        "ownership": {
            "type": "object",
            "description": "Owner assignment",
            "properties": {
                "team": { "type": "string" },
                "assignee": { "type": "string" },
                "assigned_at": { "type": "string", "format": "date-time" }
            }
        },
        "tracking": {
            "type": "object",
            "description": "Issue and PR tracking",
            "properties": {
                "issue_key": { "type": "string" },
                "issue_url": { "type": "string" },
                "stub_pr": { "type": "integer" },
                "stub_pr_url": { "type": "string" },
                "implementation_pr": { "type": "integer" },
                "migration_pr": { "type": "integer" }
            }
        },
        "sla": {
            "type": "object",
            "description": "Service level agreement tracking",
            "properties": {
                "target_date": { "type": "string", "format": "date" },
                "priority": {
                    "type": "string",
                    "enum": ["low", "medium", "high", "critical"]
                },
                "escalated": { "type": "boolean" }
            }
        },
        "metadata": {
            "type": "object",
            "additionalProperties": true
        }
    }
}
