{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://mdp.dev/schemas/ai-evaluation-metadata/v1",
    "title": "AIEvaluationMetadata",
    "description": "Metadata for AI-powered policy evaluations",
    "type": "object",
    "required": ["model", "tokens_used", "cost_usd", "confidence_score", "latency_ms", "fallback_used"],
    "properties": {
        "model": {
            "type": "string",
            "description": "Model used for evaluation (e.g., claude-3-5-sonnet-20241022)"
        },
        "tokens_used": {
            "type": "integer",
            "description": "Total tokens consumed (input + output)",
            "minimum": 0
        },
        "cost_usd": {
            "type": "number",
            "description": "Evaluation cost in USD",
            "minimum": 0
        },
        "confidence_score": {
            "type": "number",
            "description": "AI confidence score (0.0-1.0)",
            "minimum": 0.0,
            "maximum": 1.0
        },
        "latency_ms": {
            "type": "integer",
            "description": "Evaluation latency in milliseconds",
            "minimum": 0
        },
        "fallback_used": {
            "type": "boolean",
            "description": "Whether pattern-matching fallback was used"
        },
        "reasoning": {
            "type": "string",
            "description": "LLM's reasoning (optional, for debugging)"
        }
    }
}
