{
  "name": "@mdp-framework/schemas",
  "version": "1.1.16",
  "description": "MDP JSON Schemas - Core contracts for PolicyCard, StateCapsule, Envelope",
  "type": "module",
  "author": "MDP Framework Contributors",
  "homepage": "https://github.com/mdp-labs/mdp-mlang#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/mdp-labs/mdp-mlang.git",
    "directory": "packages/schemas"
  },
  "bugs": {
    "url": "https://github.com/mdp-labs/mdp-mlang/issues"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./contracts": {
      "types": "./dist/contracts.d.ts",
      "import": "./dist/contracts.js"
    },
    "./policy-card": {
      "types": "./dist/policy-card.schema.d.ts",
      "import": "./dist/policy-card.schema.js"
    },
    "./state-capsule": {
      "types": "./dist/state-capsule.schema.d.ts",
      "import": "./dist/state-capsule.schema.js"
    },
    "./envelope": {
      "types": "./dist/envelope.schema.d.ts",
      "import": "./dist/envelope.schema.js"
    },
    "./action-plan": {
      "types": "./dist/action-plan.schema.d.ts",
      "import": "./dist/action-plan.schema.js"
    }
  },
  "files": [
    "dist",
    "src/**/*.json"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist *.tsbuildinfo",
    "prepublishOnly": "npm run build && npm test"
  },
  "dependencies": {
    "ajv": "^8.16.0",
    "ajv-formats": "^3.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "typescript": "^5.6.0",
    "vitest": "^1.6.0"
  },
  "keywords": [
    "mdp",
    "schemas",
    "json-schema",
    "validation"
  ],
  "license": "MIT"
}
