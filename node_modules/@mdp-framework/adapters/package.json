{
  "name": "@mdp-framework/adapters",
  "version": "1.1.16",
  "description": "MDP Adapters - Provider facades for GitHub, Jira, Slack, Registry, Memory",
  "type": "module",
  "author": "MDP Framework Contributors",
  "homepage": "https://github.com/mdp-labs/mdp-mlang#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/mdp-labs/mdp-mlang.git",
    "directory": "packages/adapters"
  },
  "bugs": {
    "url": "https://github.com/mdp-labs/mdp-mlang/issues"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist *.tsbuildinfo",
    "prepublishOnly": "npm run build && npm test"
  },
  "dependencies": {
    "@mdp-framework/schemas": "^1.1.0",
    "@octokit/rest": "^20.1.1"
  },
  "peerDependencies": {
    "@mdp-framework/schemas": "^1.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "typescript": "^5.6.0",
    "vitest": "^1.6.0"
  },
  "keywords": [
    "mdp",
    "adapters",
    "github",
    "integrations"
  ],
  "license": "MIT"
}
